<MainMenuScene>
  
  <Controller>
    
    <Command  type   = "deactivate"
              source = "MainMenuExit"/>
    
    <Command  type   = "swap"
              source = "OptionsButton"
              target = "OptionsScene"/>
    
    <Command  type   = "change"
              source = "NewmapButton"
              target = "NewmapScene"/>
    
    <Command  type   = "change"
              source = "LoadmapButton"
              target = "LoadmapScene"/>
    
  </Controller>

  <Panel visible = "false" name = "Main Menu">
    
    <Texture description = "GUIElements.xml" />
    <Font path = "ArialSmall.tga" />
    
    <Panel name = "Copywrite" drawBackground = "false" drawBoudnds = "false">
      <Position x = "5" y = "-5" />
      <Label name = "CopywriteLabel" >
        <Text string = "MOD Imperial 5.0" />
      </Label>
    </Panel>
    
    <Panel name = "MainMenuPanel" layout = "CEN_YAXIS">
      
      <Interval x = "10" y = "10" />
      
      <Button callbackString = "NewmapButton" minAlpha = "1" drawBounds = "false" clipSize = "0">
        <TextureRectangle x = "1" y = "68" z = "123" w = "98" />
        <Texture type = "TEXTURE_2D" path = "GUIElements.png"/>
        <Color x = "1" y = "1" z = "1" />
        <Dimensions   x = "122" y = "30" />
        <Text string = "New map" />
      </Button>
      
      <Button callbackString = "LoadmapButton" minAlpha = "1" drawBounds = "false" clipSize = "0">
        <TextureRectangle x = "1" y = "68" z = "123" w = "98" />
        <Texture type = "TEXTURE_2D" path = "GUIElements.png"/>
        <Color x = "1" y = "1" z = "1" />
        <Dimensions   x = "122" y = "30" />
        <Text string = "Load map" />
      </Button>
      
      <Button callbackString = "OptionsButton" minAlpha = "1" drawBounds = "false" clipSize = "0">
        <TextureRectangle x = "1" y = "68" z = "123" w = "98" />
        <Texture type = "TEXTURE_2D" path = "GUIElements.png"/>
        <Color x = "1" y = "1" z = "1" />
        <Dimensions   x = "122" y = "30" />
        <Text string = "Options" />
      </Button>
      
      <Button callbackString = "MainMenuExit" minAlpha = "1" drawBounds = "false" clipSize = "0">
        <TextureRectangle x = "1" y = "68" z = "123" w = "98" />
        <Texture type = "TEXTURE_2D" path = "GUIElements.png"/>
        <Color x = "1" y = "1" z = "1" />
        <Dimensions   x = "122" y = "30" />
        <Text string = "Exit" />
      </Button>
      
    </Panel>
    
    <TexCoordsDesc xStart = "201" yStart = "2"   xEnd = "217" yEnd = "27"  type = "SLIDER"/>
    <TexCoordsDesc xStart = "1"   yStart = "136" xEnd = "21"  yEnd = "155" type = "CHECK_BOX"/>
    <TexCoordsDesc xStart = "25"  yStart = "132" xEnd = "49"  yEnd = "155" type = "CHECK_BOX_MARK"/>
    <TexCoordsDesc xStart = "8"   yStart = "7" xEnd = "61"  yEnd = "59" type = "RADIO_BUTTON"/>
    <TexCoordsDesc xStart =  "72" yStart = "11" xEnd = "117" yEnd = "56" type = "CHECK_RB_MARK"/>
    
  </Panel>
  
</MainMenuScene>
